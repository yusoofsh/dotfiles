#
# Shell configurations managed by Sheldon
# See $HOME/.config/sheldon/plugins.toml
#

eval "$(sheldon source)"

#
# Misc configurations
#

source <(carapace _carapace zsh)

[ -f "$HOME/.config/op/plugins.sh" ] && source "$HOME/.config/op/plugins.sh"
[ -f "$HOME/.orbstack/shell/init.zsh" ] && source "$HOME/.orbstack/shell/init.zsh"

#
# Aliases
#

alias z="zi"
alias c="clear"
alias cat="bat"
alias vim="nvim"
alias nano="micro"
alias pnpx="npx"
alias npx="bunx"
alias syncer="$HOME/.script/syncer.sh"
alias lsa="eza --all --long --icons --tree --level 1 --no-permissions --no-user --time-style long-iso --git --sort=name --group-directories-first --binary"
