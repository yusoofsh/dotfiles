#
# Pre hook
#

eval "$(/opt/homebrew/bin/brew shellenv)"

#
# Browser
#

if [[ -z "$BROWSER" && "$OSTYPE" == darwin* ]]; then
  export BROWSER='open'
fi

#
# Editors
#

if [[ -z "$EDITOR" ]]; then
  export EDITOR='micro'
fi

if [[ -z "$VISUAL" ]]; then
  export VISUAL='code --wait'
fi

if [[ -z "$PAGER" ]]; then
  export PAGER='less'
fi

#
# Paths
#

export PATH="$HOME/.local/bin:$PATH"

export PATH="$(brew --prefix)/bin:$PATH"
export PATH="$(brew --prefix)/opt/curl/bin:$PATH"
export PATH="$(brew --prefix)/opt/libressl/bin:$PATH"
export PATH="$(brew --prefix python)/libexec/bin:$PATH"
export PATH="$(brew --prefix)/opt/ruby/bin:$PATH"
export PATH="$(brew --prefix)/opt/swift/bin:$PATH"
export PATH="$(brew --prefix)/opt/zip/bin:$PATH"
export PATH="$(brew --prefix)/sbin:$PATH"

export ANDROID_PATH="$HOME/Library/Android/SDK"
export PATH="$ANDROID_PATH/cmdline-tools/latest/bin:$PATH"
export PATH="$ANDROID_PATH/platform-tools:$PATH"
export PATH="$ANDROID_PATH/tools:$PATH"

export CARGOPATH="$HOME/.cargo"
export PATH="$CARGOPATH/bin:$PATH"

export GOPATH="$HOME/.go"
export PATH="$GOPATH/bin:$PATH"

export PUB_CACHE="$HOME/.pub-cache"
export PATH="$PUB_CACHE/bin:$PATH"

export DOCKER_HOME="$HOME/.docker"
export PATH="$DOCKER_HOME/bin:$PATH"

# Ensure path arrays do not contain duplicates.
typeset -gU cdpath fpath mailpath path

#
# Less
#

# Set the default Less options.
# Mouse-wheel scrolling has been disabled by -X (disable screen clearing).
# Remove -X to enable it.
if [[ -z "$LESS" ]]; then
  export LESS='-g -i -M -R -S -w -X -z-4'
fi


#
# Post hook
#

# Added by OrbStack: command-line tools and integration
source ~/.orbstack/shell/init.zsh 2>/dev/null || :
